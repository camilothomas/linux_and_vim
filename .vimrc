" Basic Settings

filetype plugin indent on
syntax on
" set guifont:Menlo:h14
set encoding=utf-8
set nocompatible
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set scrolloff=3
set autoindent
set showmode
set showcmd
set hidden
set wildmenu
set wildmode=list:longest
set visualbell "set vb
set number
" set relativenumber
set colorcolumn=80
set wrap
" set wrapmargin=15
set linebreak
set nolist
set formatoptions=qrn1
set ruler
set incsearch
set showmatch
set hlsearch

" Aesthetics

colorscheme elflord

" Basics

inoremap jk <ESC>
let mapleader = " "

" Arrows are unvimlike

nnoremap <up> <nop>
nnoremap <down> <nop>
nnoremap <left> <nop>
nnoremap <right> <nop>
inoremap <up> <nop>
inoremap <down> <nop>
inoremap <left> <nop>
inoremap <right> <nop>

